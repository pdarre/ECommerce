@model IEnumerable<ECommerce.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-secondary", @role = "button" })
                @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-secondary", @role = "button" })
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-secondary", @role = "button" })
             </div>
        </td>
    </tr>
}

</table>
