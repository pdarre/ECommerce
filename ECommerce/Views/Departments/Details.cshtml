@model ECommerce.Models.Department

@{
    ViewBag.Title = "Details";
    var cities = ViewBag.cities;
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <h5>Cities</h5>
    <ul class="list-group">
        @foreach (var item in cities)
        {
            <li>
                @item.Name
            </li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentId }, new { @class = "btn btn-outline-secondary btn-sm" }) |
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-secondary btn-sm" })
</p>
