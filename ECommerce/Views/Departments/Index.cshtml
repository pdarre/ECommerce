@model IEnumerable<ECommerce.Models.Department>

@{
    ViewBag.Title = "Departments";
}

<h2>Departments</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-outline-secondary btn-sm" })
</p>
<div class="container">
    <table class="table table-hover">
        <thead class="thead-light shadow-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-secondary" href="~/Departments/Edit/@item.DepartmentId" role="button">Edit</a>
                        <a class="btn btn-secondary" href="~/Departments/Details/@item.DepartmentId" role="button">Details</a>
                        <a class="btn btn-secondary" href="~/Departments/Delete/@item.DepartmentId" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>